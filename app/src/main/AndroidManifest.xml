<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="training.android.ui.studentmanagement">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".views.Login.LoginActivity" />
        <activity android:name=".views.Main.PersonDetailsActivity" />
        <activity android:name=".views.group.GroupActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.student.StudentActivity" android:launchMode="singleTop"/>
        <activity android:name=".views.journal.JournalActivity"/>
    </application>

</manifest>