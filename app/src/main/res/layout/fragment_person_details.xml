<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="training.android.ui.studentmanagement.views.PersonDetails.PersonDetailsFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_details_person_name"
            android:layout_width="160dp"
            android:layout_height="27dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/text_details_person_last_name"
            android:layout_width="154dp"
            android:layout_height="32dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/text_details_person_name"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/text_details_person_middle_name"
            android:layout_width="156dp"
            android:layout_height="0dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toTopOf="@+id/text_details_group_id"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/text_details_person_last_name"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/text_details_group_id"
            android:layout_width="158dp"
            android:layout_height="27dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_constraintTop_creator="1"
            android:layout_marginStart="8dp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/text_details_person_last_name" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="128dp"
            android:layout_height="114dp"
            android:src="@drawable/ic_perm_identity_black"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginRight="47dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/text_details_person_last_name"
            android:layout_marginLeft="47dp"
            tools:layout_constraintRight_creator="1"
            android:layout_marginStart="47dp"
            android:layout_marginEnd="47dp"
            tools:layout_constraintLeft_creator="1" />

        <TextView
            android:id="@+id/editText3"
            android:layout_width="0dp"
            android:layout_height="41dp"
            android:layout_marginEnd="9dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="9dp"
            android:layout_marginStart="16dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Contacts"
            app:layout_constraintHorizontal_bias="0.888"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/editText4"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/text_details_group_id"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintLeft_creator="1" />

        <TextView
            android:id="@+id/editText4"
            android:layout_width="152dp"
            android:layout_height="44dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Journal"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_attendance_profile"
            android:layout_width="173dp"
            android:layout_height="260dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="22dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText4"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_contacts_profile"
            android:layout_width="0dp"
            android:layout_height="273dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/recycler_attendance_profile"
            app:layout_constraintTop_toBottomOf="@+id/editText3"
            app:layout_constraintVertical_bias="0.048"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1" />

    </android.support.constraint.ConstraintLayout>

</FrameLayout>
